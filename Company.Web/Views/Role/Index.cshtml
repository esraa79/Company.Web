@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "index";
}
<a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create New Role</a>
@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(D => D.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Name)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>
                        @role.Id
                    </td>
                    <td>
                        @role.Name
                    </td>
                    
                    <partial name="_ActionButtonsPartialView" model="@role.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3>there is no Role</h3>
    </div>
}

