@model RoleUpdateViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Edit Role</h1>

<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-controller="Role">
            <input hidden asp-for="Id" />
            <partial name="PartialViews/CreateEditPartialView" model="@Model" />
            <div class="my-3">
                <a class="btn btn-info" asp-action="AddorRemoveUsers" asp-controller="Role" asp-route-roleId="@Model.Id">Add or Remove Role</a>

            </div>
            <br />
            <br />
            <div>
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-light">Back to List</a>


            </div>
        </form>


    </div>
</div>

