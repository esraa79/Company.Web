
@model IEnumerable<EmployeeDto>

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<div  class="row justify-content-center align-item-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Serch by Name" />

        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>
</div>
@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(D => D.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Department)
                </th>
                 <th>
                    @Html.DisplayNameFor(D => D.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.HiringDate)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        @employee.Name
                    </td>
                    <td>
                        @employee.Age
                    </td>
                    <td>
                        @employee.Address
                    </td>
                    <td>
                        @employee.Department
                    </td>
                    <td>
                        @Html.DisplayFor(M => employee.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(M => employee.Email)
                    </td>
                    <td>
                        @employee.Phone
                    </td>
                    <td>
                        @employee.HiringDate
                    </td>
                    <partial name="_ActionButtonsPartialView" model="@employee.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3>there is no Employee</h3>
    </div>
}
