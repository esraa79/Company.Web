@using Company.Data.Enitity
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "index";
}
<a asp-controller="User" asp-action="Create" class="btn btn-primary">Create New User</a>
@if (Model.Count() > 0)
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(D => D.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Email)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.Id
                    </td>
                    <td>
                        @user.UserName
                    </td>
                    <td>
                        @user.Email
                    </td>
                    <partial name="_ActionButtonsPartialView" model="@user.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3>there is no Users</h3>
    </div>
}
