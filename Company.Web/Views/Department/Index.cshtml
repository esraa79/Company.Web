@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "index";
}
<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Deprtment</a>
@if(Model.Count()>0)
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(D=>D.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.CreateAt)
                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>
                        @department.Code
                    </td>
                    <td>
                        @department.Name
                    </td>
                    <td>
                        @department.CreateAt
                    </td>
                    <partial name="_ActionButtonsPartialView" model="@department.Id.ToString()" />
                                  </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3>there is no Department</h3>
    </div>
}
