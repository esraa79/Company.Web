@model IEnumerable<Department>
@{
    ViewData["Title"] = "index";
}
<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Deprtment</a>
@if(Model.Count()>0)
{
    <table class=" table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(D=>D.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(D => D.CreateAt)
                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>
                        @department.Code
                    </td>
                    <td>
                        @department.Name
                    </td>
                    <td>
                        @department.CreateAt
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@department.id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@department.id" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@department.id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert-warning">
        <h3>there is no Department</h3>
    </div>
}
