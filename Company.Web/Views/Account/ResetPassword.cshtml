@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ResetPassword</h1>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="Email" />   
    <input type="hidden" asp-for="Token"   />
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" required />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <br />
  

    <input type="submit" value="Change Password" class="btn btn-primary">
    </form>

