@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignUp</h1>
	
<form asp-action="SignUp" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" placeholder="Enter your username" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" placeholder="Enter your username" required />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter your email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" required />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <br/>
    <div class="wthree-text">
        <label class="animated">
            <input type="checkbox" required />
            <span> I Agree terms</span>
        </label>

</div>

    <button type="submit" value="SignUp" class="btn btn-primary">Register</button>
</form>
<p class="text-white">Do you have an Account? <a asp-action="Login" class="text-primary">Login Now!</a></p>